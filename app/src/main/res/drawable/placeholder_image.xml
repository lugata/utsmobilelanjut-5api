<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer border -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#E0E0E0" />
            <corners android:radius="32dp" />
        </shape>
    </item>

    <!-- Inner white background -->
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape
            android:shape="rectangle">
            <solid android:color="#00FFFFFF" />
            <corners android:radius="32dp" />
        </shape>
    </item>

</layer-list>
